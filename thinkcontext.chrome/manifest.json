			      ,"*://www.google.com/*"
			      ,"*://www.bing.com/search*"
			      ,"*://www.bing.com/"
			      ,"*://twitter.com/*"
			      ,"*://facebook.com/*"
			      ,"*://www.facebook.com/*"
			      ,"http://*.yahoo.com/*"
			      ,"https://*.yahoo.com/*"
			     ] ,
	    "js": ["jquery-2.0.0.min.js","jquery-ui-1.9.2.custom.min.js","ejs_production.js","utils.js","bg-utils.js","reverse.js"]
	}
