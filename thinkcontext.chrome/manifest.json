	    "matches": ["http://*.search.yahoo.com/*","https://*.search.yahoo.com/*","*://goodsearch.com/*"],
	    "js": ["jquery-2.0.0.min.js","jquery-ui-1.9.2.custom.min.js","ejs_production.js","utils.js","yahoo-search.js"]
	}
	,{
	    "css": ["jquery-ui.css"],
	    "matches": ["*://*/*"],
